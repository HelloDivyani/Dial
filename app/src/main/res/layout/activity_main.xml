<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.divyani.dial.MainActivity">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:onClick="add1"
        android:id="@+id/b1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="185dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:onClick="add2"
        android:id="@+id/b2"
        android:layout_alignBottom="@+id/b1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:onClick="add3"
        android:id="@+id/b3"
        android:layout_alignBottom="@+id/b2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:onClick="add4"
        android:id="@+id/b4"
        android:layout_below="@+id/b2"
        android:layout_alignRight="@+id/b1"
        android:layout_alignEnd="@+id/b1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:onClick="add5"
        android:id="@+id/b5"
        android:layout_alignBottom="@+id/b4"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignStart="@+id/b2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:onClick="add6"
        android:id="@+id/b6"
        android:layout_alignBottom="@+id/b5"
        android:layout_alignLeft="@+id/b3"
        android:layout_alignStart="@+id/b3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/b7"
        android:onClick="add7"
        android:layout_below="@+id/b4"
        android:layout_alignRight="@+id/b4"
        android:layout_alignEnd="@+id/b4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:onClick="add8"
        android:id="@+id/b8"
        android:layout_below="@+id/b5"
        android:layout_alignLeft="@+id/b5"
        android:layout_alignStart="@+id/b5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:onClick="add9"
        android:id="@+id/b9"
        android:layout_alignBottom="@+id/b8"
        android:layout_alignLeft="@+id/b6"
        android:layout_alignStart="@+id/b6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:onClick="addstar"
        android:id="@+id/bstar"
        android:layout_below="@+id/b7"
        android:layout_alignRight="@+id/b7"
        android:layout_alignEnd="@+id/b7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:onClick="add0"
        android:id="@+id/b0"
        android:layout_alignBottom="@+id/bstar"
        android:layout_alignLeft="@+id/b8"
        android:layout_alignStart="@+id/b8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:onClick="clear"
        android:id="@+id/bhash"
        android:layout_alignBottom="@+id/b0"
        android:layout_alignLeft="@+id/b9"
        android:layout_alignStart="@+id/b9" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LogInfo"
        android:onClick="log"
        android:id="@+id/button14"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/bhash"
        android:layout_alignEnd="@+id/bhash" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Contact"
        android:onClick="contact"
        android:id="@+id/button15"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:onClick="callme"
        android:id="@+id/button"
        android:layout_below="@+id/b0"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/phone"
        android:hint="Your Phone Number is displayed here"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/b3"
        android:layout_alignEnd="@+id/b3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
